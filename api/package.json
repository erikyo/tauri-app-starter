{
  "name": "api",
  "version": "1.0.0",
  "description": "api",
  "private": true,
  "type": "module",
  "main": "./lib/server.js",
  "scripts": {
    "start-debug": "set DEBUG=com.supertokens* && npm run start",
    "start": "set NODE_ENV=development && nodemon",
    "compile": "tsc",
    "serve": "node dist/server.js",
    "lint": "npx @biomejs/biome check --write src",
    "test": "vitest"
  },
  "dependencies": {
    "@fastify/autoload": "^5.10.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.4.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.3.0",
    "@fastify/mysql": "^4.3.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.0.1",
    "basic-ftp": "^5.0.5",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "fastify-tsconfig": "^2.0.0",
    "joi": "^17.13.3",
    "supertokens-node": "^23.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@types/node": "^22.1.0",
    "concurrently": "^8.2.2",
    "fastify-tsconfig": "^2.0.0",
    "nodemon": "^3.1.4",
    "typescript": "^5.5.4",
    "vitest": "^4.0.8"
  },
  "nodemonConfig": {
    "ignore": [
      "**/test/**"
    ],
    "watch": [
      "src/**/*"
    ],
    "verbose": true,
    "exec": "npm run compile && npm run serve",
    "delay": 500,
    "ext": "ts js json"
  }
}
