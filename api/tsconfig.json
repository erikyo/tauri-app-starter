{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "removeComments": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist/**/*",
    "./node_modules/**/*"
  ]
}
