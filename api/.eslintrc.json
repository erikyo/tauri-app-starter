{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "overrides": [
    {
      "files": [
        "tests/**/*"
      ],
      "plugins": ["jest", "jest/globals", "node/node-builtins"],
