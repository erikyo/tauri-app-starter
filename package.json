{
  "name": "tauri-app-starter",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "postinstall": "(cd api && npm install); (cd app && npm install)",

    "start": "docker-compose --env-file .env up -d api",
    "poststart": "npm run start:frontend",
    "down": "docker-compose down",
    "start:app": "docker-compose up -d && npm run start:frontend-app",
    "tests": "docker compose --env-file .env.test up",
    "posttests": "npm-run-all --parallel tests:backend tests:frontend",

    "start:backend": "cd api && npm run start",
    "start:frontend": "cd app && npm run dev",
    "start:frontend-app": "cd app && npm run tauri dev",

    "build:backend": "cd api && npm run build",
    "build:frontend": "cd app && npm run tauri",
    "build-app": "npx npm-run-all --parallel build:frontend build:backend",

    "tests:backend": "cd api && npm test",
    "tests:frontend": "cd app && npm test",

    "prepare": "husky"
  },
  "keywords": [],
  "author": "Erik Golinelli",
  "license": "ISC",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "npm-run-all": "^4.1.5",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
