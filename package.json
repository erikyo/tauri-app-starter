{
  "name": "tauri-app-api",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "start": "docker-compose up -d",
    "poststart": "npm run start:frontend",
    "postinstall": "(cd api && npm install); (cd app && npm install)",
    "start:backend": "docker-compose up -d --env-file .env",
    "start:frontend": "cd app && npm run dev",
    "start:frontend-app": "cd app && npm run tauri dev",
    "build:backend": "cd api && npm run build",
    "build:frontend": "cd app && npm run tauri",
    "start-app": "npm-run-all --parallel start:frontend-app start:backend",
    "build-app": "npx npm-run-all --parallel build:frontend build:backend",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Erik Golinelli",
  "license": "ISC",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "npm-run-all": "^4.1.5",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
